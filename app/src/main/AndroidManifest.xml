<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pearlmutter.grades" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Semesters"
            android:label="@string/title_activity_semesters"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".EditCourse"
            android:label="@string/title_activity_edit_course" >
        </activity>
        <activity
            android:name=".Courses"
            android:label="@string/title_activity_courses" >
        </activity>
        <activity
            android:name=".Graph"
            android:label="@string/title_activity_graph" >
        </activity>
    </application>

</manifest>
